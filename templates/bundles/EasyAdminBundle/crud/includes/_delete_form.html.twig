<form class="d-none" method="post" id="delete-form">
    {% guard function csrf_token %}
        <input type="hidden" name="token" value="{{ csrf_token('ea-delete') }}" />
    {% endguard %}
</form>

<div id="modal-delete" class="modal modal-blur fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-status bg-danger"></div>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'action.close'|trans({}, 'EasyAdminBundle') }}"></button>
            <div class="modal-body text-center py-4">
                <twig:ux:icon class="text-warning" name="tabler:alert-triangle" height="72" />
                <h3 class="mt-3">{{ 'delete_modal.title'|trans([], 'EasyAdminBundle') }}</h3>
                <div class="text-muted">{{ 'delete_modal.content'|trans([], 'EasyAdminBundle') }}</div>
            </div>
            <div class="modal-footer">
                <button type="button" data-bs-dismiss="modal" class="btn btn-secondary">
                    <twig:ux:icon class="icon" name="tabler:x" /> {{ 'action.cancel'|trans([], 'EasyAdminBundle') }}
                </button>
                <button type="button" data-bs-dismiss="modal" class="btn btn-danger" id="modal-delete-button" form="delete-form">
                    <twig:ux:icon class="icon" name="tabler:trash" /> {{ 'action.delete'|trans([], 'EasyAdminBundle') }}
                </button>
            </div>
        </div>
    </div>
</div>
