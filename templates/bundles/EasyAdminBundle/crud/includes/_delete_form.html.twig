{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
<form class="d-none" method="post" id="delete-form">
    {% guard function csrf_token %}
        <input type="hidden" name="token" value="{{ csrf_token('ea-delete') }}" />
    {% endguard %}
</form>

<div id="modal-delete" class="modal modal-blur fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-status bg-danger"></div>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'action.close'|trans({}, 'EasyAdminBundle') }}"></button>
            <div class="modal-body text-center py-4">
                <twig:ea:Icon class="icon-lg text-danger" name="alert-triangle" />
                <h4 class="mt-3">{{ 'delete_modal.title'|trans([], 'EasyAdminBundle') }}</h4>
                <div class="text-muted">{{ 'delete_modal.content'|trans([], 'EasyAdminBundle') }}</div>
            </div>
            <div class="modal-footer">
                <twig:ea:Button type="button" data-bs-dismiss="modal">
                    <twig:ea:Icon name="x" /> {{ 'action.cancel'|trans([], 'EasyAdminBundle') }}
                </twig:ea:Button>
                <twig:ea:Button type="button" variant="danger" data-bs-dismiss="modal" id="modal-delete-button" form="delete-form">
                    <twig:ea:Icon name="trash" /> {{ 'action.delete'|trans([], 'EasyAdminBundle') }}
                </twig:ea:Button>
            </div>
        </div>
    </div>
</div>
