{% extends "public/layout/base.html.twig" %}

{% block page_title %}
	{{ 'public.reset.title'|trans }}
{% endblock %}

{% block page_class %}page-center{% endblock %}

{% block header %}{% endblock %}

{% block page_body %}
	<main class="container container-tight py-4">
		{% block main %}
			{{ form_start(resetForm, { 'attr': { 'class': 'card card-md' } }) }}
				<div class="card-status-top bg-primary"></div>
				<div class="card-body">
					<h2 class="card-title text-center mb-4">
						<a href="{{ path('home') }}" class="navbar-brand navbar-brand-autodark">
							<img src="{{ app.session.get('config').appLogo }}" alt="{{ app.session.get('config').appName }}" style="max-height: 30px;">
						</a>
					</h2>
					<p class="text-muted mb-4">{{ 'public.reset.tokenText'|trans }}</p>
					{{ form_row(resetForm.plainPassword) }}
					<div class="form-footer">
						<button type="submit" class="btn btn-primary w-100">
							<twig:ux:icon class="icon" name="tabler:device-floppy" /> {{ 'public.reset.tokenBtn'|trans }}
						</button>
					</div>
				</div>
			{{ form_end(resetForm) }}
		{% endblock %}
	</main>
{% endblock %}

{% block footer %}{% endblock %}

{% block js %}
	{{ parent() }}

	{{ importmap('form-type-password') }}
{% endblock %}
