<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <title>{{ app.session.get('config').appName }} - {{ block('content_title') }}</title>
        {% block head_favicon %}
            <link rel="shortcut icon" href="{{ asset(app.session.get('config').appFavicon) }}">
        {% endblock %}
        {% block importmap %}
            {{ importmap('app') }}
            {{ importmap('public') }}
            {{ importmap('page-color-scheme') }}
        {% endblock %}
    </head>
    {% set darkModeClass = app.request.cookies.get('colorScheme') == 'dark' ? 'dark' : 'light' %}
    {% block body %}
        <body {% block body_attr %}{% endblock %}
            id="{% block body_id %}{% endblock %}"
            class="{% block body_class %}{% endblock %}"
            data-bs-theme="{{ darkModeClass }}"
        >
            {% block main %}{% endblock main %}
        </body>
    {% endblock body %}
</html>
